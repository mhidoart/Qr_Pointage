<script src="/js/addSatisfactionForm.js"></script>
<div class="container">
    <div class="row">
        <h3 class="text-center">Ajouter un formulaire de satisfaction</h3>
        <form id="satisfactionQForm" method="POST" action="/questionnaire">
            <div class="form-group">
                <label for="desabledSeance">Id séance</label>
                <input type="text" class="form-control" id="desabledSeance" aria-describedby="cmt-id-seance" disabled
                    value="<%=idSeance%>" placeholder="<%=idSeance%>">
                <input type="text" class="form-control  d-none" id="idSeance" name="idSeance" value="<%=idSeance%>">
                <input type="text" class="form-control  d-none" id="idUser" name="idUser" value="<%=idUser%>">
                <small id="cmt-id-seance" class="form-text text-muted">id de la séance concerné.</small>
            </div>
            <div class="form-group">
                <input type="text" class="form-control d-none" id="nbrQuestion" name="nbrQuestion" value="1">
            </div>
            <div class="form-group">
                <label for="q1">Question</label>
                <div class="row">
                    <div class="col-8"><input type="text" class="form-control" id="q1" name="q1"
                            placeholder="votre question ici ?"></div>
                </div>
            </div>

    </div>

    <div id="formulaireSatisfaction"></div>
    <div class="mt-3">
        <button type="button" class="btn btn-success" onclick="addQuestion()">Ajouter une question</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
</div>
</div>